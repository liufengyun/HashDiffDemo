!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "HashDiff"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = stylesheet_link_tag    "bootstrap_and_overrides"
    = csrf_meta_tags
    = yield(:head)
  %body
    = render :partial => "layouts/facebook"
    = render :partial => "layouts/twitter"

    /%header.navbar.navbar-fixed-top
    /
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        %h2{:style => "float:left"} HashDiff
        %div{:style => "float:right; height:36px; margin-top:15px"}
          %a.twitter-share-button{"data-url" => "http://hashdiff.herokuapp.com/", :href => "https://twitter.com/share"} Tweet
        .fb-like{"data-href" => "http://hashdiff.herokuapp.com/", "data-layout" => "button_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "450", :style => "float:right; heigth:36px; margin-top:15px"}

        .content{:style => "margin-top:42px"}
          .row-fluid
            .span12
              = render 'layouts/messages'
              = yield

      .container{:style => "margin-top:10px;"}
        %footer
          %p
            %span liufengyun &copy 2012
            %span.pull-right{:style => "margin-right:10px;"}
              %span=link_to "View Source", "https://github.com/liufengyun/HashDiffDemo"
              %span -
              %span=link_to "HashDiff", "https://github.com/liufengyun/hashdiff"
